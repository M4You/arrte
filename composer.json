{
    "name": "m4you/arrte",
    "description": "Simple PHP templating engine",
    "type": "library",
    "keywords": [
        "php"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mykola Kovalskyi",
            "email": "it.my.ko@gmail.com",
            "homepage": "https://kovalskyi.dev"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Arrte\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arrte\\Tests\\": "tests"
        }
    },
    "config": {
        "platform": {
            "php": "8.1.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
